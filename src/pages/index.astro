---
import Layout from '../layouts/Layout.astro';
import Marquee from '../components/marquee.astro';
---

<Layout title="Welcome to Astro.">
	<main>
		
		<video autoplay muted loop id="myVideo">
			<source src="/intro.mp4" type="video/mp4">
		  </video>
		 <Marquee></Marquee>
		
	</main>
</Layout>

<style>

	

main{
	min-height: 100vh;
	width:100%;
}

	#logo{
		width:150px;
		position:relative;
		z-index:10;
	}

	#myVideo {
  position: fixed;
  right: 0;
  bottom: 0;
  min-width: 100%;
  min-height: 100%;
}

	
</style>
