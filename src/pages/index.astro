---
import Layout from '../layouts/Layout.astro';
import Marquee from '../components/marquee.astro';
---

<Layout title="Welcome to Astro.">
	<main class="max-h-screen w-screen relative place-content-center grid	">
		<div class="absolute w-full h-full z-10 bg-black opacity-60"></div>
		<img class="relative w-[450px] relative z-20 " src="/affiche.jpeg"></img>
		<video class="absolute z-0 object-cover aspect-video max-h-screen" autoplay muted playsinline loop id="myVideo">
			<source src="/intro.mp4" type="video/mp4">
		  </video>
		 
		
	</main>
</Layout>

<style>

	

main{
	min-height: 100vh;
	width:100%;
}

	#logo{
		width:150px;
		position:relative;
		z-index:10;
	}

	#myVideo {
  right: 0;
  bottom: 0;
  min-width: 100%;
  min-height: 100%;
}

	
</style>
